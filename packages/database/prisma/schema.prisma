datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  username     String
  isGuest      Boolean  @default(true)
  deviceId     String?  @unique
  email        String?  @unique
  passwordHash String?
  avatar       String? // optional profile picture
  coins        Int      @default(0)
  createdAt    DateTime @default(now())
  lastActive   DateTime @updatedAt

  // Relations
  gameResults    GameResult[]
  sessions       UserSession[]
  friendsFrom    Friend[]       @relation("UserFriendsFrom")
  friendsTo      Friend[]       @relation("UserFriendsTo")
  matchHistories MatchHistory[]
}

model UserSession {
  id        String   @id @default(uuid())
  userId    String
  socketId  String? // last known socket ID
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id])
}

model GameResult {
  id        String   @id @default(uuid())
  roomId    String
  gameType  String
  winnerId  String?
  startedAt DateTime
  endedAt   DateTime

  players Json // store snapshot: [{"userId": "...", "score": ...}]

  // Relations
  winner         User?          @relation(fields: [winnerId], references: [id])
  matchHistories MatchHistory[]
}

model Friend {
  id          String   @id @default(uuid())
  requesterId String
  recipientId String
  status      String // "pending", "accepted", "blocked"
  createdAt   DateTime @default(now())

  requester User @relation("UserFriendsFrom", fields: [requesterId], references: [id])
  recipient User @relation("UserFriendsTo", fields: [recipientId], references: [id])

  @@unique([requesterId, recipientId])
}

model MatchHistory {
  id        String   @id @default(uuid())
  userId    String
  gameType  String
  resultId  String? // link to GameResult
  createdAt DateTime @default(now())

  User       User        @relation(fields: [userId], references: [id])
  GameResult GameResult? @relation(fields: [resultId], references: [id])
}
