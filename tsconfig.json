{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@funloop/game-core/*": ["packages/game-core/src/*"],
      "@funloop/database/*": ["packages/database/src/*"],
      "@funloop/logger/*": ["packages/logger/src/*"],
      "@funloop/types/*": ["packages/types/src/*"]
    }
  }
}
